pipeline {
    agent any
    parameters {
        choice(name: 'RECORDTYPE', choices: ['games', 'movies', 'khmom-scores', 'tfbl-scores'], description: 'Pick a record type')
    }
    stages {
        stage('Build') {
            steps {
                cleanWs()
                script {
                    def d = new Date()
                    def now = d.format("yyyyMMddHHmmss")
                    withCredentials([usernamePassword(credentialsId: 'GitHub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh """
                            git clone https://github.com/egartley/records.git
                            cd records/${params.RECORDTYPE}
                            python3 generate-html.py
                            cd ../../
                            git clone https://${USERNAME}:${PASSWORD}@github.com/${USERNAME}/net.git
                            cd net
                            git remote set-url origin https://${USERNAME}:${PASSWORD}@github.com/${USERNAME}/net.git
                            git checkout -b jenkins-${now}
                            cp \"../records/${params.RECORDTYPE}/${params.RECORDTYPE}.html\" \"_pages/records/${params.RECORDTYPE}.html\"
                            git add .
                            git config --global user.email "evanmgartley@gmail.com"
                            git config --global user.name \"${USERNAME}\"
                            git commit -m \"Update ${params.RECORDTYPE} records\"
                            git push --set-upstream origin jenkins-${now}
                        """
                    }
                }
            }
        }
    }
}
